//javascript
                              // Navbar background change on scroll
window.addEventListener("scroll", function () {
  const navbar = document.getElementById("navbar");
  if (window.scrollY > 50) {
    navbar.classList.add("scrolled");
  } else {
    navbar.classList.remove("scrolled");
  }
});

// Toggle menu for mobile
const menuToggle = document.getElementById("menu-toggle");
const navLinks = document.getElementById("nav-links");

menuToggle.addEventListener("click", () => {
  navLinks.classList.toggle("show");
  menuToggle.innerHTML = navLinks.classList.contains("show") ? "✖" : "☰";
});

// Destination Data
const destinations = {
  maldives: {
    title: "Maldives Escape",
    description: "Experience 7 days of luxury in private villas surrounded by turquoise waters.",
    highlights: [
      "Private water villa stay",
      "Scuba diving and snorkeling",
      "Island hopping",
      "Luxury spa sessions"
    ],
    budget: "$1,500 – $2,500"
  },
  paris: {
    title: "Paris Getaway",
    description: "A 5-day romantic escape in the city of lights and love.",
    highlights: [
      "Eiffel Tower visit",
      "Seine river cruise",
      "Louvre Museum tour",
      "French wine & dining experiences"
    ],
    budget: "$1,200 – $2,000"
  },
  himalayas: {
    title: "Himalayan Trek",
    description: "Adventure-packed 10-day trek through the Himalayan ranges.",
    highlights: [
      "Guided trekking routes",
      "Camping under the stars",
      "Local cultural experiences",
      "Mountain sunrise views"
    ],
    budget: "$800 – $1,500"
  },
  newyork: {
    title: "New York Explorer",
    description: "7 days exploring the Big Apple’s landmarks, shows, and nightlife.",
    highlights: [
      "Times Square & Broadway shows",
      "Central Park walking tour",
      "Statue of Liberty visit",
      "Shopping on 5th Avenue"
    ],
    budget: "$1,400 – $2,200"
  }
};

// Modal
const modal = document.getElementById("destinationModal");
const modalBody = document.getElementById("modalBody");
const closeModal = document.querySelector(".close");

document.querySelectorAll(".learn-more").forEach(button => {
  button.addEventListener("click", () => {
    const key = button.getAttribute("data-destination");
    const destination = destinations[key];

    modalBody.innerHTML = `
      <h2>${destination.title}</h2>
      <p>${destination.description}</p>
      <h3>Highlights:</h3>
      <ul>${destination.highlights.map(item => `<li>${item}</li>`).join("")}</ul>
      <p><strong>Budget:</strong> ${destination.budget}</p>
    `;

    modal.style.display = "flex";
  });
});

closeModal.addEventListener("click", () => {
  modal.style.display = "none";
});

window.addEventListener("click", (e) => {
  if (e.target === modal) modal.style.display = "none";
});
